swagger: '2.0'

info:
  version: "3.0.0"
  title: Solartis Payment Service V3
  description: To invoke Chase Payment Gateway to make payment
# Alfresco Link : http://portal.solartis.net:8080/share/page/site/solartis-platform/wiki-page?title=Payment_Service
host: paymentservice.solartis.net
basePath: /PaymentServiceV3/PaymentV3
schemes:
  - https
consumes:
  - application/json
produces:
  - application/json
paths:
  /payV3:
    post:
      description: To make payment through CHASE payment gateway
      operationId: payV3
      produces:
        - application/json
      consumes:
        - application/json
      parameters:
        - name: Mode
          in: header
          description: Mode, based on which the execution must take place
          required: true
          type: string      
          format: string
          default: "LIVE"
        - name: Payment
          in: body
          description: Payment details
          required: true          
          schema:
            $ref: '#/definitions/Payment_Request'
      responses:
        '200':
          description: Success Response
          schema:
            $ref: '#/definitions/Payment_Success_Response'
        default:
          description: unexpected error
          schema:
            $ref: '#/definitions/errorModel' 
definitions:
  Payment_Request:
    type: object
    required:
     - ServiceRequestDetail
     - PaymentDetail
    properties:
      EndClientUserUniqueSessionId:
        type: string
        default: "Uniquesession"
      EndClientUserBrowserSessionId:
        type: string
      EndClientUserBrowserInformation:
        type: string
      PaaSClientIPAddress:
        type: string
      ClientUniqueRequestID:
        type: string
      ServiceRequestDetail:
        type: object
        required:
          - OwnerId   
          - UserName
          - RegionCode
          - ServiceRequestVersion
          - Token
          - ResponseType
        properties:
          OwnerId:
            type: string
            default: "24"
          ResponseType:
            type: string
            enum: ["JSON","XML"]
            default: "JSON"
          UserName:
            type: string
            default: "BOPAgent"
          Token:
            type: string
            default: ""
          BrowserIp:
            type: string 
            default: "127.0.0.1"
          ServiceRequestVersion:
            type: string
            default: "3.0"
          RegionCode:
            type: string
            default: "US"
      PaymentDetail:
        type: object
        required:
          - PaymenMethodDetail
        properties:
          InvoiceNumber:
            type: string
            default: '11221'
          TransactionId:
            type: string
            default: '122'
          TransactionType:
            type: string
            default: Report Purchase
          Amount:
            type: string
            default: '200.00'
          PaymentMode:
            type: string
            default: Initial
          PaymentType:
            type: string
            default: Pay
          PaymentMethod:
            type: string
            default: Credit Card
          TransactionReferenceNumber:
            type: string
            default: '2212'
          Comments:
            type: string
            default: " "
          PaymenMethodDetail:
            type: object
            properties:
              CardDetail:
                type: object
                properties:
                  CardType:
                    type: string
                    enum:
                    - MasterCard
                    - Visa
                    - JCB
                    - Discover
                    - American Express
                  CardNumber:
                    type: string
                    enum:
                    - '5555555555554444'
                    - '4012888888881881'
                    - '3530111333300000'
                    - '6011000990139424'
                    - '347712669659320'
                  ExpiryDate:
                    type: string
                    title: ExpiryDate (MMYY)
                  CVV:
                    type: string
          PayerDetail:
            type: object
            properties:
              PayerReferenceNumber:
                type: string
                default: '101'
              PayerName:
                type: string
                default: Test Payment
              AddressLine1:
                type: string
                default: '788 County Road'
              AddressLine2:
                type: string
                default: " "
              City:
                type: string
                default: Ider
              State:
                type: string
                default: AL
              CountryCode:
                type: string
                default: US
              ZipCode:
                type: string
                default: '35981'
              PhoneNumber:
                type: string
                default: '1111111111'
              EmailAddress:
                type: string
                default: 'test@test.com'
  Payment_Success_Response:
    type: object
    required:
      - ResponseStatus
    properties:
      ResponseStatus:
        type: string
      PaymentDetail:
        type: object
        properties:
          PaymentDate:
            type: string
          PaymentStatus:
            type: string
          PaymentConfirmationNumber:
            type: string
          TransactionReferenceNumber:
            type: string
          PaymentStatusMessage:
            type: string
          PaymentAuthorizationNumber:
            type: string
          PaidAmount:
            type: string
          PaymenMethodDetail:
            type: object
            properties:
              CardDetail:
                type: object
                properties:
                  CardType:
                    type: string
                  CardNumber:
                    type: string
                  ExpiryDate:
                    type: string
                    title: ExpiryDate (MMYY)
                  CVV:
                    type: string          
          PayerDetail:
            type: object
            properties:
              PayerReferenceNumber:
                type: string
              PayerName:
                type: string
              EmailAddress:
                type: string
  errorModel:
    type: object
    required:
      - RequestStatus
      - MessageDetail
    properties:
      RequestStatus:
        type: string
      MessageDetail:
        type: object
        properties:
          MessageCode:
            type: string
          MessageType:
            type: string
          UserMessage:
            type: string
          MessageLevel:
            type: string
          MessageSeverity:
            type: string
          MessageList:
            type: object
            properties:
              Message:
                type: array
                items:
                  type: string

                   
          
